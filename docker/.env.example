# Copy this file to .env and fill in values before running docker compose

# Required — generate with: openssl rand -base64 32
JWT_SECRET=your-secret-here

# Public URL of the server (used in magic link emails)
BASE_URL=https://policyflow.yourcompany.com

# Bootstrap admin account (created on first startup — change before going live)
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Policy Admin

# Optional SMTP (leave empty to log emails to stdout for development)
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=postmaster@mg.yourcompany.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=PolicyFlow <noreply@yourcompany.com>

# Set to "true" to print all emails to stdout instead of sending (useful for staging)
DEV_EMAIL_MODE=false

# Set to "true" to use implicit TLS on port 465 instead of STARTTLS on port 587
# SMTP_TLS=true
